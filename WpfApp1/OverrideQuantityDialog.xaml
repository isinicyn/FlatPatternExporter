<Window x:Class="WpfApp1.OverrideQuantityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Переопределить количество" Width="290" Height="130" MinWidth="290" MinHeight="130">
    <Grid Margin="10,10,10,10">
        <StackPanel Margin="0,10,0,0" Orientation="Horizontal" Height="25" VerticalAlignment="Top">
            <TextBlock Text="Введите новое количество:" Width="170" VerticalAlignment="Center" />
            <TextBox x:Name="quantityTextBox" PreviewTextInput="QuantityTextBox_PreviewTextInput" Width="75" VerticalContentAlignment="Center" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="25" VerticalAlignment="Bottom" Width="155" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Margin="0,0,5,0" Click="OkButton_Click" />
            <Button Content="Cancel" Width="75" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>

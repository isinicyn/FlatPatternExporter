<Window x:Class="FlatPatternExporter.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе FPEx" 
        Width="450"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        SizeToContent="Height">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основная информация -->
        <StackPanel Grid.Row="0" Margin="{StaticResource StandardPaddingThickness}">
            <GroupBox Header="Информация о программе" Margin="{StaticResource BottomLargeMarginThickness}">
                <StackPanel Margin="{StaticResource SectionContentMarginThickness}">
                    <DockPanel Margin="{StaticResource BottomSmallMarginThickness}">
                        <TextBlock x:Name="VersionTextBlock" 
                                   Text="Версия программы: 1.0.0" 
                                   Style="{StaticResource BaseTextBlockStyle}"/>
                        <Button Width="{StaticResource LargeElementHeight}" Height="{StaticResource LargeElementHeight}" 
                                Margin="{StaticResource SmallMarginThickness}" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center" 
                                Click="CopyVersionToClipboard_Click" 
                                ToolTip="Копировать версию">
                            <Image Source="/Resources/Pic/copy-icon.png" 
                                   Stretch="Uniform" 
                                   Width="16" 
                                   Height="16"/>
                        </Button>
                    </DockPanel>

                    <TextBlock Text="Автор: Ivan Sinicyn" 
                               Style="{StaticResource BaseTextBlockStyle}" 
                               Margin="{StaticResource BottomHairlineMarginThickness}"/>
                    <TextBlock Text="Email: isinicyn@gmail.com" 
                               Style="{StaticResource BaseTextBlockStyle}" 
                               Margin="{StaticResource BottomHairlineMarginThickness}"/>
                    <TextBlock Text="Лицензия: Свободная" 
                               Style="{StaticResource BaseTextBlockStyle}" 
                               Margin="{StaticResource BottomHairlineMarginThickness}"/>
                    <TextBlock x:Name="LastUpdateTextBlock" 
                               Text="Последнее обновление: 10/09/2023" 
                               Style="{StaticResource BaseTextBlockStyle}" 
                               Margin="{StaticResource BottomHairlineMarginThickness}"/>
                </StackPanel>
            </GroupBox>

            <TextBlock Text="Создано при поддержке ChatGPT 4o, Claude 3.5 Sonnet, Claude Sonnet 4, Mistral Large 2" 
                       FontSize="{StaticResource SmallFontSize}" 
                       Foreground="{StaticResource TextMutedBrush}" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Кнопки -->
        <Border Grid.Row="1" Style="{StaticResource DialogBottomBarStyle}">
            <Button Content="Закрыть" 
                    HorizontalAlignment="Right" 
                    Style="{StaticResource FileNameActionButtonStyle}"
                    Click="CloseButton_Click"/>
        </Border>
    </Grid>
</Window>

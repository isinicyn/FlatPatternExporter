<Window x:Class="FlatPatternExporter.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе FPEx" 
        Width="450"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        Background="White"
        FontFamily="Segoe UI" SizeToContent="Height">

    <Window.Resources>
        <ResourceDictionary>
            <!-- Подключение внешнего файла стилей -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/GeneralStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#F8F8F8" BorderBrush="#D0D0D0" BorderThickness="0,0,0,1" Padding="15">
            <TextBlock Text="FPEx - Flat Pattern Exporter" 
                       FontWeight="SemiBold" 
                       FontSize="16" 
                       Foreground="#333333" 
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Основная информация -->
        <StackPanel Grid.Row="1" Margin="15">
            <GroupBox Header="Информация о программе" Margin="0,0,0,15">
                <StackPanel Margin="10,10,10,5">
                    <DockPanel Margin="0,0,0,5">
                        <TextBlock x:Name="VersionTextBlock" 
                                   Text="Версия программы: 1.0.0" 
                                   FontSize="11" 
                                   VerticalAlignment="Center"/>
                        <Button Width="32" Height="32" 
                                Margin="5,0,0,0" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center" 
                                Click="CopyVersionToClipboard_Click" 
                                ToolTip="Копировать версию"
                                Style="{StaticResource SymbolButtonStyle}">
                            <Image Source="/Resources/Pic/copy-icon.png" 
                                   Stretch="Uniform" 
                                   Width="16" 
                                   Height="16"/>
                        </Button>
                    </DockPanel>

                    <TextBlock Text="Автор: Ivan Sinicyn" 
                               FontSize="11" 
                               Margin="0,0,0,1"/>
                    <TextBlock Text="Email: isinicyn@gmail.com" 
                               FontSize="11" 
                               Margin="0,0,0,1"/>
                    <TextBlock Text="Лицензия: Свободная" 
                               FontSize="11" 
                               Margin="0,0,0,1"/>
                    <TextBlock x:Name="LastUpdateTextBlock" 
                               Text="Последнее обновление: 10/09/2023" 
                               FontSize="11" 
                               Margin="0,0,0,1"/>
                </StackPanel>
            </GroupBox>

            <TextBlock Text="Создано при поддержке ChatGPT 4o, Claude 3.5 Sonnet, Claude Sonnet 4, Mistral Large 2" 
                       FontSize="10" 
                       Foreground="#666666" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Кнопки -->
        <Border Grid.Row="2" Background="#F8F8F8" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0" Padding="15,10">
            <Button Content="Закрыть" 
                    HorizontalAlignment="Right" 
                    Width="120" 
                    Style="{StaticResource FileNameActionButtonStyle}"
                    Click="CloseButton_Click"/>
        </Border>
    </Grid>
</Window>
<Window x:Class="FlatPatternExporter.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="О программе FPEx" 
        Width="450"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        Background="White"
        FontFamily="Segoe UI" SizeToContent="Height">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основная информация -->
        <StackPanel Grid.Row="0" Margin="15">
            <GroupBox Header="Информация о программе" Margin="0,0,0,15">
                <StackPanel Margin="10,10,10,5">
                    <DockPanel Margin="0,0,0,5">
                        <TextBlock x:Name="VersionTextBlock" 
                                   Text="Версия программы: 1.0.0" 
                                   Style="{StaticResource BaseTextBlockStyle}"/>
                        <Button Width="32" Height="32" 
                                Margin="{StaticResource SmallMarginThickness}" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center" 
                                Click="CopyVersionToClipboard_Click" 
                                ToolTip="Копировать версию">
                            <Image Source="/Resources/Pic/copy-icon.png" 
                                   Stretch="Uniform" 
                                   Width="16" 
                                   Height="16"/>
                        </Button>
                    </DockPanel>

                    <TextBlock Text="Автор: Ivan Sinicyn" 
                               Style="{StaticResource BaseTextBlockStyle}" 
                               Margin="0,0,0,1"/>
                    <TextBlock Text="Email: isinicyn@gmail.com" 
                               Style="{StaticResource BaseTextBlockStyle}" 
                               Margin="0,0,0,1"/>
                    <TextBlock Text="Лицензия: Свободная" 
                               Style="{StaticResource BaseTextBlockStyle}" 
                               Margin="0,0,0,1"/>
                    <TextBlock x:Name="LastUpdateTextBlock" 
                               Text="Последнее обновление: 10/09/2023" 
                               Style="{StaticResource BaseTextBlockStyle}" 
                               Margin="0,0,0,1"/>
                </StackPanel>
            </GroupBox>

            <TextBlock Text="Создано при поддержке ChatGPT 4o, Claude 3.5 Sonnet, Claude Sonnet 4, Mistral Large 2" 
                       FontSize="{StaticResource SmallFontSize}" 
                       Foreground="{StaticResource TextMutedBrush}" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Кнопки -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundTertiaryBrush}" BorderBrush="{StaticResource BorderSecondaryBrush}" BorderThickness="0,1,0,0" Padding="15,10">
            <Button Content="Закрыть" 
                    HorizontalAlignment="Right" 
                    Width="80" 
                    Style="{StaticResource FileNameActionButtonStyle}"
                    Click="CloseButton_Click"/>
        </Border>
    </Grid>
</Window>
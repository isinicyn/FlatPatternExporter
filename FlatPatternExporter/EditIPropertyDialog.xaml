<Window x:Class="FlatPatternExporter.EditIPropertyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать iProperty"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        Background="White"
        FontFamily="Segoe UI" SizeToContent="WidthAndHeight">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основное содержимое -->
        <StackPanel Grid.Row="0" Margin="15">
            <GroupBox Header="Свойства детали" Margin="0,0,0,15">
                <StackPanel Margin="10,10,10,5">
                    <!-- Обозначение (Part Number) -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Обозначение (Part Number):" 
                                   FontSize="11" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="partNumberTextBox" 
                                 Style="{StaticResource FileNameInputTextBoxStyle}"
                                 Width="380"
                                 ToolTip="Введите обозначение детали"/>
                    </StackPanel>

                    <!-- Наименование (Description) -->
                    <StackPanel Margin="0,0,0,5">
                        <TextBlock Text="Наименование (Description):" 
                                   FontSize="11" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="descriptionTextBox" 
                                 Style="{StaticResource FileNameInputTextBoxStyle}"
                                 Width="380"
                                 ToolTip="Введите наименование детали"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Кнопки -->
        <Border Grid.Row="1" Background="#F8F8F8" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" 
                        Width="120" 
                        Margin="0,0,5,0"
                        Style="{StaticResource FileNameActionButtonStyle}"
                        Click="CancelButton_Click"/>
                <Button Content="ОК" 
                        Width="120" 
                        Style="{StaticResource FileNameActionButtonStyle}"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
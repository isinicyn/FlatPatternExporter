<Window x:Class="FlatPatternExporter.EditIPropertyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать iProperty"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        Background="{StaticResource BackgroundPrimaryBrush}"
        SizeToContent="WidthAndHeight">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основное содержимое -->
        <StackPanel Grid.Row="0" Margin="{StaticResource StandardPaddingThickness}">
            <GroupBox Header="Свойства детали" Margin="{StaticResource BottomLargeMarginThickness}">
                <StackPanel Margin="{StaticResource SectionContentMarginThickness}">
                    <!-- Обозначение (Part Number) -->
                    <StackPanel Margin="{StaticResource BottomMediumMarginThickness}">
                        <TextBlock Text="Обозначение (Part Number):" 
                                   Style="{StaticResource BaseTextBlockStyle}" 
                                   FontWeight="Bold" 
                                   Margin="{StaticResource BottomSmallMarginThickness}"/>
                        <TextBox x:Name="partNumberTextBox" 
                                 Style="{StaticResource FileNameInputTextBoxStyle}"
                                 Width="380"
                                 ToolTip="Введите обозначение детали"/>
                    </StackPanel>

                    <!-- Наименование (Description) -->
                    <StackPanel Margin="{StaticResource BottomSmallMarginThickness}">
                        <TextBlock Text="Наименование (Description):" 
                                   Style="{StaticResource BaseTextBlockStyle}" 
                                   FontWeight="Bold" 
                                   Margin="{StaticResource BottomSmallMarginThickness}"/>
                        <TextBox x:Name="descriptionTextBox" 
                                 Style="{StaticResource FileNameInputTextBoxStyle}"
                                 Width="380"
                                 ToolTip="Введите наименование детали"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Кнопки -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundTertiaryBrush}" BorderBrush="{StaticResource BorderSecondaryBrush}" BorderThickness="{StaticResource StandardTopOnlyBorderThicknessValue}" Padding="{StaticResource StandardPaddingThickness}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" 
                        Width="80" 
                        Margin="{StaticResource RightSmallMarginThickness}"
                        Style="{StaticResource FileNameActionButtonStyle}"
                        Click="CancelButton_Click"/>
                <Button Content="ОК" 
                        Width="80" 
                        Style="{StaticResource FileNameActionButtonStyle}"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark theme color resources -->

    <!-- Background colors - modern dark gray tones -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="#252526"/>
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="BackgroundQuaternaryBrush" Color="#333337"/>

    <!-- Main text colors -->
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#C0C0C0"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#9D9D9D"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#656565"/>
    <SolidColorBrush x:Key="TextTransparentMutedBrush" Color="#808E8E8E"/>

    <!-- Borders and separators -->
    <SolidColorBrush x:Key="BorderPrimaryBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="BorderSecondaryBrush" Color="#454545"/>
    <SolidColorBrush x:Key="BorderTertiaryBrush" Color="#555555"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#383838"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="#5A5A5A"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#3F3F46"/>
    <SolidColorBrush x:Key="GridLinesBrush" Color="#2D2D30"/>

    <!-- System colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0E639C"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#1177BB"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#4EC9B0"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="#6CCF9E"/>
    <SolidColorBrush x:Key="SuccessDarkBrush" Color="#3FB394"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F48771"/>
    <SolidColorBrush x:Key="ErrorDarkBrush" Color="#E8705B"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#CE9178"/>

    <!-- State backgrounds -->
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="HighlightBackgroundBrush" Color="#094771"/>
    <SolidColorBrush x:Key="SelectionBackgroundBrush" Color="#37373D"/>

    <!-- Special backgrounds -->
    <SolidColorBrush x:Key="TokenBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="TokenCustomBackgroundBrush" Color="#1A2A3A"/>
    <SolidColorBrush x:Key="TokenCustomBorderBrush" Color="#569CD6"/>
    <SolidColorBrush x:Key="TokenUserDefinedBackgroundBrush" Color="#2D2512"/>
    <SolidColorBrush x:Key="TokenUserDefinedBorderBrush" Color="#CE9178"/>
    <SolidColorBrush x:Key="PreviewValidBackgroundBrush" Color="#1A2E1A"/>
    <SolidColorBrush x:Key="PreviewValidBorderBrush" Color="#3E5A3E"/>
    <SolidColorBrush x:Key="PreviewWarningBackgroundBrush" Color="#2D2512"/>
    <SolidColorBrush x:Key="PreviewWarningBorderBrush" Color="#5A4A2E"/>

    <!-- Backgrounds for red shades (deletion, errors) -->
    <SolidColorBrush x:Key="RedLightBackgroundBrush" Color="#3D2828"/>
    <SolidColorBrush x:Key="RedMediumBackgroundBrush" Color="#4D2F2F"/>
    <SolidColorBrush x:Key="RedLightBorderBrush" Color="#6B4545"/>
    <SolidColorBrush x:Key="RedMediumBorderBrush" Color="#8B5A5A"/>

    <!-- Backgrounds for green shades (success, confirmation) -->
    <SolidColorBrush x:Key="GreenLightBackgroundBrush" Color="#1F3A2E"/>
    <SolidColorBrush x:Key="GreenMediumBackgroundBrush" Color="#264D3A"/>
    <SolidColorBrush x:Key="GreenLightBorderBrush" Color="#3E6B52"/>
    <SolidColorBrush x:Key="GreenMediumBorderBrush" Color="#4A8765"/>

    <!-- Transparent colors -->
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ProgressBarBrush" Color="#404EC9B0"/>

    <!-- Colors for processing statuses -->
    <SolidColorBrush x:Key="ProcessingStatusSuccessBrush" Color="#4EC9B0"/>
    <SolidColorBrush x:Key="ProcessingStatusErrorBrush" Color="#F48771"/>

    <!-- Status bar background -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#007ACC"/>

    <!-- Brushes for DataGrid row alternation -->
    <SolidColorBrush x:Key="EvenRowBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="OddRowBrush" Color="#252526"/>
    <SolidColorBrush x:Key="HighlightBrush" Color="#37373D"/>
    <SolidColorBrush x:Key="HighlightTextBrush" Color="#FFFFFF"/>

</ResourceDictionary>

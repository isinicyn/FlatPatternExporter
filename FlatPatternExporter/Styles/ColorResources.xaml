<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Light theme color resources -->

    <!-- Background colors - soft light tones -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="BackgroundQuaternaryBrush" Color="#EBEBEB"/>

    <!-- Main text colors -->
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#3D3D3D"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#4A4A4A"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#6B6B6B"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="TextTransparentMutedBrush" Color="#80767676"/>

    <!-- Borders and separators -->
    <SolidColorBrush x:Key="BorderPrimaryBrush" Color="#D4D4D4"/>
    <SolidColorBrush x:Key="BorderSecondaryBrush" Color="#DCDCDC"/>
    <SolidColorBrush x:Key="BorderTertiaryBrush" Color="#CACACA"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#CACACA"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="#B8B8B8"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#D4D4D4"/>
    <SolidColorBrush x:Key="GridLinesBrush" Color="#F0F0F0"/>

    <!-- System colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#16A085"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="#1ABC9C"/>
    <SolidColorBrush x:Key="SuccessDarkBrush" Color="#138D75"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#E74C3C"/>
    <SolidColorBrush x:Key="ErrorDarkBrush" Color="#C0392B"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#E67E22"/>

    <!-- State backgrounds -->
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#E8E8E8"/>
    <SolidColorBrush x:Key="HighlightBackgroundBrush" Color="#CCE4F7"/>
    <SolidColorBrush x:Key="SelectionBackgroundBrush" Color="#ECECEC"/>

    <!-- Special backgrounds -->
    <SolidColorBrush x:Key="TokenBackgroundBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="TokenCustomBackgroundBrush" Color="#E1F0FF"/>
    <SolidColorBrush x:Key="TokenCustomBorderBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="TokenUserDefinedBackgroundBrush" Color="#FFF4E5"/>
    <SolidColorBrush x:Key="TokenUserDefinedBorderBrush" Color="#E67E22"/>
    <SolidColorBrush x:Key="PreviewValidBackgroundBrush" Color="#D5F4E6"/>
    <SolidColorBrush x:Key="PreviewValidBorderBrush" Color="#16A085"/>
    <SolidColorBrush x:Key="PreviewWarningBackgroundBrush" Color="#FFF4E5"/>
    <SolidColorBrush x:Key="PreviewWarningBorderBrush" Color="#E67E22"/>

    <!-- Backgrounds for red shades (deletion, errors) -->
    <SolidColorBrush x:Key="RedLightBackgroundBrush" Color="#FADBD8"/>
    <SolidColorBrush x:Key="RedMediumBackgroundBrush" Color="#F5B7B1"/>
    <SolidColorBrush x:Key="RedLightBorderBrush" Color="#E74C3C"/>
    <SolidColorBrush x:Key="RedMediumBorderBrush" Color="#C0392B"/>

    <!-- Backgrounds for green shades (success, confirmation) -->
    <SolidColorBrush x:Key="GreenLightBackgroundBrush" Color="#D5F4E6"/>
    <SolidColorBrush x:Key="GreenMediumBackgroundBrush" Color="#ABEBC6"/>
    <SolidColorBrush x:Key="GreenLightBorderBrush" Color="#16A085"/>
    <SolidColorBrush x:Key="GreenMediumBorderBrush" Color="#138D75"/>

    <!-- Transparent colors -->
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ProgressBarBrush" Color="#6016A085"/>

    <!-- Colors for processing statuses -->
    <SolidColorBrush x:Key="ProcessingStatusSuccessBrush" Color="#16A085"/>
    <SolidColorBrush x:Key="ProcessingStatusErrorBrush" Color="#E74C3C"/>

    <!-- Status bar background -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="#0078D4"/>

    <!-- Brushes for DataGrid row alternation -->
    <SolidColorBrush x:Key="EvenRowBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="OddRowBrush" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="HighlightBrush" Color="#ECECEC"/>
    <SolidColorBrush x:Key="HighlightTextBrush" Color="#2D2D2D"/>

</ResourceDictionary>

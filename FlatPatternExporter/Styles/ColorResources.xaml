<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Основные цветовые ресурсы приложения -->

    <!-- Белые и очень светлые тона -->
    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="White"/>
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="#F8F8F8"/>
    <SolidColorBrush x:Key="BackgroundQuaternaryBrush" Color="#F5F5F5"/>

    <!-- Основные текстовые цвета -->
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#333333"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#444444"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#666666"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="Gray"/>
    <SolidColorBrush x:Key="TextTransparentMutedBrush" Color="#808E8E8E"/>

    <!-- Границы и разделители -->
    <SolidColorBrush x:Key="BorderPrimaryBrush" Color="#C8C8C8"/>
    <SolidColorBrush x:Key="BorderSecondaryBrush" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="BorderTertiaryBrush" Color="#C0C0C0"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="BorderDarkBrush" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#FF969595"/>
    <SolidColorBrush x:Key="GridLinesBrush" Color="#EAEAEA"/>

    <!-- Системные цвета -->
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#003778"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="Green"/>
    <SolidColorBrush x:Key="SuccessLightBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="SuccessDarkBrush" Color="#388E3C"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="Red"/>
    <SolidColorBrush x:Key="ErrorDarkBrush" Color="#C80000"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFFF2929"/>

    <!-- Фоны состояний -->
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="HighlightBackgroundBrush" Color="#D1E8FF"/>
    <SolidColorBrush x:Key="SelectionBackgroundBrush" Color="#F0F0F0"/>

    <!-- Специальные фоны -->
    <SolidColorBrush x:Key="TokenBackgroundBrush" Color="#F8F8F8"/>
    <SolidColorBrush x:Key="TokenCustomBackgroundBrush" Color="#F0F8FF"/>
    <SolidColorBrush x:Key="TokenCustomBorderBrush" Color="#4682B4"/>
    <SolidColorBrush x:Key="TokenUserDefinedBackgroundBrush" Color="#FFF8E1"/>
    <SolidColorBrush x:Key="TokenUserDefinedBorderBrush" Color="#FF8F00"/>
    <SolidColorBrush x:Key="PreviewValidBackgroundBrush" Color="#F5FDF5"/>
    <SolidColorBrush x:Key="PreviewValidBorderBrush" Color="#C8E6C9"/>
    <SolidColorBrush x:Key="PreviewWarningBackgroundBrush" Color="#FFFCF5"/>
    <SolidColorBrush x:Key="PreviewWarningBorderBrush" Color="#FFE0B2"/>

    <!-- Фоны для оттенков красного (удаление, ошибки) -->
    <SolidColorBrush x:Key="RedLightBackgroundBrush" Color="#FFE6E6"/>
    <SolidColorBrush x:Key="RedMediumBackgroundBrush" Color="#FFCCCC"/>
    <SolidColorBrush x:Key="RedLightBorderBrush" Color="#FF9999"/>
    <SolidColorBrush x:Key="RedMediumBorderBrush" Color="#FF6666"/>

    <!-- Фоны для оттенков зеленого (успех, подтверждение) -->
    <SolidColorBrush x:Key="GreenLightBackgroundBrush" Color="#E6FFE6"/>
    <SolidColorBrush x:Key="GreenMediumBackgroundBrush" Color="#CCFFCC"/>
    <SolidColorBrush x:Key="GreenLightBorderBrush" Color="#99CC99"/>
    <SolidColorBrush x:Key="GreenMediumBorderBrush" Color="#66AA66"/>

    <!-- Прозрачные цвета -->
    <SolidColorBrush x:Key="TransparentBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="ProgressBarBrush" Color="#FFE1E1E1"/>

    <!-- Цвета для статусов обработки -->
    <SolidColorBrush x:Key="ProcessingStatusSuccessBrush" Color="Green"/>
    <SolidColorBrush x:Key="ProcessingStatusErrorBrush" Color="Red"/>

    <!-- Цвета для различных состояний количества -->
    <SolidColorBrush x:Key="QuantityOverriddenBrush" Color="Red"/>
    <SolidColorBrush x:Key="QuantityMultipliedBrush" Color="Blue"/>

    <!-- Фон строки состояния -->
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="LightGray"/>

    <!-- Кисти для чередования строк DataGrid -->
    <SolidColorBrush x:Key="EvenRowBrush" Color="White"/>
    <SolidColorBrush x:Key="OddRowBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="HighlightBrush" Color="#D1E8FF"/>
    <SolidColorBrush x:Key="HighlightTextBrush" Color="Black"/>

</ResourceDictionary>
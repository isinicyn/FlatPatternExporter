<UserControl x:Class="FlatPatternExporter.UI.Controls.CustomTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="TitleBarControl"
             Height="32">

    <UserControl.Resources>
        <!-- Window chrome button style -->
        <Style x:Key="WindowChromeButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close button style -->
        <Style x:Key="WindowChromeCloseButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource WindowChromeButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="{DynamicResource BackgroundSecondaryBrush}"
            BorderBrush="{DynamicResource BorderPrimaryBrush}"
            BorderThickness="0,0,0,1">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Window icon -->
            <Image Grid.Column="0"
                   Source="{Binding ElementName=TitleBarControl, Path=Icon}"
                   Width="16"
                   Height="16"
                   Margin="10,0,8,0"
                   VerticalAlignment="Center">
                <Image.Style>
                    <Style TargetType="Image">
                        <Style.Triggers>
                            <Trigger Property="Source" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>

            <!-- Window title -->
            <TextBlock Grid.Column="1"
                       x:Name="TitleTextBlock"
                       Text="{Binding ElementName=TitleBarControl, Path=Title}"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       FontSize="{DynamicResource StandardFontSize}"
                       FontWeight="Normal"
                       VerticalAlignment="Center"
                       HorizontalAlignment="{Binding ElementName=TitleBarControl, Path=TitleAlignment}"
                       TextTrimming="CharacterEllipsis">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Margin" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=TitleBarControl, Path=Icon}" Value="{x:Null}">
                                <Setter Property="Margin" Value="10,0,0,0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Content area for custom controls -->
            <ContentPresenter Grid.Column="2"
                              Content="{Binding ElementName=TitleBarControl, Path=ContentArea}"
                              VerticalAlignment="Center"/>

            <!-- Window buttons -->
            <StackPanel Grid.Column="3"
                        Orientation="Horizontal">

                <!-- Update button with conditional space reservation -->
                <Grid>
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Width" Value="Auto"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=TitleBarControl, Path=ReserveUpdateButtonSpace}" Value="True">
                                    <Setter Property="Width" Value="46"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Button x:Name="UpdateButton"
                            Style="{StaticResource WindowChromeButtonStyle}"
                            Width="46"
                            Height="32"
                            Click="UpdateButton_Click"
                            ToolTip="{Binding ElementName=TitleBarControl, Path=UpdateTooltip}">
                        <Path x:Name="UpdateIconPath"
                              StrokeThickness="1.5"
                              Fill="Transparent"
                              Width="16"
                              Height="16"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Data" Value="{StaticResource DownloadIconGeometry}"/>
                                    <Setter Property="Stroke" Value="{DynamicResource SuccessBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=TitleBarControl, Path=HasUpdateError}" Value="True">
                                            <Setter Property="Stroke" Value="{DynamicResource ErrorBrush}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=TitleBarControl, Path=IsUpToDate}" Value="True">
                                            <Setter Property="Data" Value="{StaticResource CheckmarkIconGeometry}"/>
                                            <Setter Property="Stroke" Value="{DynamicResource SuccessBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Button>
                </Grid>

                <!-- Minimize button -->
                <Button x:Name="MinimizeButton"
                        Style="{StaticResource WindowChromeButtonStyle}"
                        Width="46"
                        Height="32"
                        Click="MinimizeButton_Click">
                    <Path Data="M0,5 L10,5"
                          Stroke="{DynamicResource TextSecondaryBrush}"
                          StrokeThickness="1"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                </Button>

                <!-- Maximize/Restore button -->
                <Button x:Name="MaximizeRestoreButton"
                        Style="{StaticResource WindowChromeButtonStyle}"
                        Width="46"
                        Height="32"
                        Click="MaximizeRestoreButton_Click">
                    <Path x:Name="MaximizeRestorePath"
                          Data="M0,0 L10,0 L10,10 L0,10 Z"
                          Stroke="{DynamicResource TextSecondaryBrush}"
                          StrokeThickness="1"
                          Fill="Transparent"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                </Button>

                <!-- Close button -->
                <Button x:Name="CloseButton"
                        Style="{StaticResource WindowChromeCloseButtonStyle}"
                        Width="46"
                        Height="32"
                        Click="CloseButton_Click">
                    <Path Data="M0,0 L10,10 M0,10 L10,0"
                          Stroke="{DynamicResource TextSecondaryBrush}"
                          StrokeThickness="1"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

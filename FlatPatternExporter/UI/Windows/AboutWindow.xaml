<Window x:Class="FlatPatternExporter.UI.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:extensions="clr-namespace:FlatPatternExporter.Extensions"
        Title="{extensions:Localize Header_About}" 
        Width="450"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        SizeToContent="Height">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main information -->
        <StackPanel Grid.Row="0" Margin="{StaticResource StandardPaddingThickness}">
            <GroupBox Header="{extensions:Localize Header_About}" Margin="{StaticResource BottomLargeMarginThickness}">
                <StackPanel Margin="{StaticResource SectionContentMarginThickness}">
                    <DockPanel Margin="{StaticResource BottomSmallMarginThickness}">
                        <TextBlock x:Name="VersionTextBlock" 
                                   Text="{extensions:Localize Text_ProgramVersion}" 
                                   Style="{StaticResource BaseTextBlockStyle}" VerticalAlignment="Center"/>
                        <Button Style="{StaticResource CopyIconButton}" 
                                Margin="{StaticResource SmallMarginThickness}" 
                                Click="CopyVersionToClipboard_Click" 
                                ToolTip="{extensions:Localize ToolTip_CopyVersion}" HorizontalAlignment="Right">
                            
                        </Button>
                    </DockPanel>

                    <TextBlock Text="{extensions:Localize Text_Author}"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Margin="{StaticResource BottomHairlineMarginThickness}"/>
                    <TextBlock Text="Email: isinicyn@gmail.com"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Margin="{StaticResource BottomHairlineMarginThickness}"/>
                    <TextBlock Text="{extensions:Localize Text_License}"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Margin="{StaticResource BottomHairlineMarginThickness}"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="{extensions:Localize Header_AISupport}">
                <StackPanel Margin="{StaticResource SectionContentMarginThickness}">
                    <TextBlock Text="ChatGPT 4o, Claude 3.5 Sonnet, Claude 4 Sonnet, Claude 4.1 Opus, Claude 4.5 Sonnet, Mistral Large 2"
                               FontSize="{StaticResource SmallFontSize}"
                               Foreground="{StaticResource TextMutedBrush}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Buttons -->
        <Border Grid.Row="1" Style="{StaticResource DialogBottomBarStyle}">
            <Button Content="{extensions:Localize Button_Close}"
                    HorizontalAlignment="Right"
                    Style="{StaticResource FileNameActionButtonStyle}"
                    Click="CloseButton_Click"/>
        </Border>
    </Grid>
</Window>


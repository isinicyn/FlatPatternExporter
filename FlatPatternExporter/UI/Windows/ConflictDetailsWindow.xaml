<Window x:Class="FlatPatternExporter.UI.Windows.ConflictDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:FlatPatternExporter.UI.Controls"
        xmlns:services="clr-namespace:FlatPatternExporter.Services"
        xmlns:extensions="clr-namespace:FlatPatternExporter.Extensions"
        shell:WindowChrome.WindowChrome="{StaticResource CustomWindowChrome}"
        Title="{extensions:Localize Header_ConflictDetails}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Width="900"
        Height="450"
        MinWidth="600"
        MinHeight="300"
        Background="{DynamicResource BackgroundPrimaryBrush}"
        Foreground="{DynamicResource TextSecondaryBrush}">

    <Border Background="{DynamicResource BackgroundPrimaryBrush}"
            BorderBrush="{DynamicResource BorderPrimaryBrush}"
            BorderThickness="1">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Custom title bar -->
        <local:CustomTitleBar Grid.Row="0"
                              Title="{extensions:Localize Header_ConflictDetails}"
                              ShowMinimizeButton="False"/>

        <!-- Main content -->
        <ScrollViewer Grid.Row="1"
                      Margin="{StaticResource StandardPaddingThickness}"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Common header for all tables -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0"
                            Background="{DynamicResource SelectionBackgroundBrush}"
                            Height="{StaticResource LargeElementHeight}"
                            BorderBrush="{DynamicResource BorderLightBrush}"
                            BorderThickness="1,1,1,1"
                            Margin="0,0,5,0">
                        <TextBlock Text="{extensions:Localize Column_PartNumber}"
                                   FontSize="{StaticResource StandardFontSize}"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Padding="{StaticResource StandardPaddingThickness}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0"
                                Background="{DynamicResource SelectionBackgroundBrush}"
                                Height="{StaticResource LargeElementHeight}"
                                BorderBrush="{DynamicResource BorderLightBrush}"
                                BorderThickness="1,1,0,1">
                            <TextBlock Text="{extensions:Localize Table_FileName}"
                                       FontSize="{StaticResource StandardFontSize}"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Padding="{StaticResource StandardPaddingThickness}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <Border Grid.Column="1"
                                Background="{DynamicResource SelectionBackgroundBrush}"
                                Height="{StaticResource LargeElementHeight}"
                                BorderBrush="{DynamicResource BorderLightBrush}"
                                BorderThickness="1,1,1,1">
                            <TextBlock Text="{extensions:Localize Table_ModelState}"
                                       FontSize="{StaticResource StandardFontSize}"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Padding="{StaticResource StandardPaddingThickness}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Grid>

                <!-- Container with tables -->
                <ItemsControl ItemsSource="{Binding ConflictGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Block with part number -->
                            <Border Grid.Column="0"
                                    Background="{DynamicResource BackgroundPrimaryBrush}" 
                                    BorderBrush="{DynamicResource BorderPrimaryBrush}"
                                    BorderThickness="1,1,1,1"
                                    Margin="0,0,5,0">
                                <TextBlock Text="{Binding PartNumber}" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </Border>

                            <!-- Table for group -->
                            <DataGrid Grid.Column="1"
                                      ItemsSource="{Binding Files}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      RowHeight="45"
                                      GridLinesVisibility="None"
                                      Background="{DynamicResource BackgroundPrimaryBrush}"
                                      BorderBrush="{DynamicResource BorderPrimaryBrush}"
                                      BorderThickness="{StaticResource StandardBorderThicknessValue}"
                                      HorizontalGridLinesBrush="{DynamicResource GridLinesBrush}"
                                      VerticalGridLinesBrush="{DynamicResource GridLinesBrush}"
                                      SelectionMode="Single"
                                      SelectionUnit="FullRow"
                                      AlternationCount="2"
                                      LostFocus="DataGrid_LostFocus"
                                      EnableRowVirtualization="False"
                                      RowHeaderWidth="0"
                                      RowStyle="{StaticResource DataGridRowStyle}"
                                      HeadersVisibility="None"
                                      RowHeaderStyle="{StaticResource DataGridRowHeaderStyle}"
                                      CellStyle="{StaticResource DataGridCellStyle}"
                                      CanUserSortColumns="False">
                                <DataGrid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="{extensions:Localize ContextMenu_OpenFile}" Click="OpenFileMenuItem_Click"/>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="{extensions:Localize Table_FileName}" 
                                                        Binding="{Binding FileNameOnly}" 
                                                        Width="2*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredCellStyle}">
                                                <Setter Property="ToolTip" Value="{Binding FileName}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="{extensions:Localize Table_ModelState}" 
                                                        Binding="{Binding ModelState}" 
                                                        Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource CenteredCellStyle}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Style="{StaticResource DialogBottomBarStyle}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{extensions:Localize Button_OK}"
                        Style="{StaticResource FileNameActionButtonStyle}"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
    </Border>
</Window>

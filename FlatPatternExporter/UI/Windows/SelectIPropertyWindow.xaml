<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
    xmlns:local="clr-namespace:FlatPatternExporter.UI.Controls"
    xmlns:extensions="clr-namespace:FlatPatternExporter.Extensions"
    xmlns:converters="clr-namespace:FlatPatternExporter.Converters"
    xmlns:services="clr-namespace:FlatPatternExporter.Services"
    mc:Ignorable="av" x:Class="FlatPatternExporter.UI.Windows.SelectIPropertyWindow"
    shell:WindowChrome.WindowChrome="{StaticResource CustomWindowChrome}"
    Title="{extensions:Localize Header_SelectProperties}"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    MinWidth="400"
    MinHeight="450" Width="560"
    Background="{DynamicResource BackgroundPrimaryBrush}"
    Foreground="{DynamicResource TextSecondaryBrush}">

    <Window.Resources>
        <!-- CollectionViewSource for standard properties with grouping -->
        <CollectionViewSource x:Key="StandardPropertiesSource"
                              Source="{Binding StandardProperties}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Category" />
            </CollectionViewSource.GroupDescriptions>
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Category" Direction="Ascending" />
                <scm:SortDescription PropertyName="ListDisplayName" Direction="Ascending" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>

        <!-- CollectionViewSource for user-defined properties -->
        <CollectionViewSource x:Key="UserPropertiesSource"
                              Source="{Binding UserDefinedProperties}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="ListDisplayName" Direction="Ascending" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <Border Background="{DynamicResource BackgroundPrimaryBrush}"
            BorderBrush="{DynamicResource BorderPrimaryBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource StandardCornerRadiusValue}">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Custom title bar -->
        <local:CustomTitleBar Grid.Row="0"
                              Title="{extensions:Localize Header_SelectProperties}"
                              ShowMinimizeButton="False"/>

        <!-- Header and general information -->
        <Border Grid.Row="1"
                Background="{DynamicResource BackgroundSecondaryBrush}"
                BorderBrush="{DynamicResource BorderLightBrush}"
                BorderThickness="{StaticResource StandardTopOnlyBorderThicknessValue}"
                Padding="{StaticResource StandardPaddingThickness}">
            <StackPanel>
                <TextBlock Text="{extensions:Localize Text_PropertyManagement}"
                           Style="{StaticResource SectionHeaderTextStyle}"
                           FontSize="{StaticResource LargeFontSize}"
                           Margin="0"/>
                <TextBlock Text="{extensions:Localize Text_PropertyInstructions}"
                           Foreground="{DynamicResource TextMutedBrush}"
                           Margin="{StaticResource TopSmallMarginThickness}" TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </Border>

        <!-- Main content with tabs -->
        <TabControl Grid.Row="2" Margin="{StaticResource StandardMarginThickness}">
            <!-- Standard properties tab -->
            <TabItem Header="{extensions:Localize Text_StandardProperties}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search and filter panel -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource BackgroundQuaternaryBrush}"
                            BorderBrush="{DynamicResource BorderLightBrush}"
                            BorderThickness="{StaticResource StandardBorderThicknessValue}"
                            Margin="{StaticResource BottomSmallMarginThickness}"
                            Padding="{StaticResource StandardPaddingThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="StandardSearchBox"
                                         Grid.Column="0"
                                         Style="{StaticResource BaseTextBoxStyle}"
                                         TextChanged="StandardSearchBox_TextChanged"/>
                                <TextBlock Text="{extensions:Localize Text_SearchByName}"
                                           Foreground="{DynamicResource TextMutedBrush}"
                                           Margin="{StaticResource SmallMarginThickness}"
                                           IsHitTestVisible="False" VerticalAlignment="Center"
                                           Padding="{StaticResource TextBoxPaddingThickness}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=StandardSearchBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <Border Grid.Column="1" Width="{StaticResource StandardElementHeight}" Height="{StaticResource StandardElementHeight}" Margin="{StaticResource TinyMarginThickness}">
                                    <Button x:Name="ClearStandardSearchButton"
                                        Click="ClearStandardSearchButton_Click"
                                        Style="{StaticResource CloseIconButton}"
                                        IsEnabled="False">
                                    </Button>
                                </Border>
                            </Grid>

                            <ComboBox x:Name="CategoryFilter"
                                      Grid.Column="2"
                                      Width="150"
                                      Margin="{StaticResource LeftSmallMarginThickness}"
                                      Style="{StaticResource BaseComboBoxStyle}"
                                      SelectedIndex="0"
                                      SelectionChanged="CategoryFilter_SelectionChanged">
                                <ComboBoxItem>
                                    <ComboBoxItem.Content>
                                        <Binding Path="CurrentCulture" Source="{x:Static services:LocalizationManager.Instance}">
                                            <Binding.Converter>
                                                <converters:LocalizationKeyConverter />
                                            </Binding.Converter>
                                            <Binding.ConverterParameter>Filter_AllCategories</Binding.ConverterParameter>
                                        </Binding>
                                    </ComboBoxItem.Content>
                                </ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Standard properties list -->
                    <ListBox x:Name="StandardPropertiesListBox"
                             Grid.Row="1"
                             ItemsSource="{Binding Source={StaticResource StandardPropertiesSource}}"
                             ItemContainerStyle="{StaticResource CustomListBoxItemStyle}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             BorderBrush="{DynamicResource BorderLightBrush}"
                             Background="{DynamicResource BackgroundPrimaryBrush}"
                             BorderThickness="{StaticResource StandardBorderThicknessValue}"
                             MouseDoubleClick="StandardPropertiesListBox_MouseDoubleClick">

                        <!-- Grouping by categories -->
                        <ListBox.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource BackgroundTertiaryBrush}"
                                                BorderBrush="{DynamicResource BorderSecondaryBrush}"
                                                BorderThickness="{StaticResource StandardTopOnlyBorderThicknessValue}"
                                                Margin="{StaticResource TopSmallMarginThickness}"
                                                Padding="{StaticResource SmallRectPaddingThickness}">
                                            <TextBlock Text="{Binding Name}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextTertiaryBrush}"
                                                       FontSize="{StaticResource StandardFontSize}"/>
                                        </Border>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ListBox.GroupStyle>

                        <!-- Item template -->
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="ItemBorder"
                                        Background="{DynamicResource BackgroundPrimaryBrush}"
                                        BorderBrush="{DynamicResource BorderLightBrush}"
                                        BorderThickness="{StaticResource StandardBorderThicknessValue}"
                                        CornerRadius="{StaticResource SmallCornerRadiusValue}"
                                        Padding="{StaticResource SmallRectPaddingThickness}"
                                        Margin="{StaticResource TinyMarginThickness}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Column 0: Property name -->
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding ListDisplayName}"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource StandardFontSize}"
                                                   Margin="{StaticResource RightSmallPlusMarginThickness}"/>

                                        <!-- Column 1: Default value input (visible only when added) -->
                                        <Grid Grid.Column="1">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>

                                            <TextBox Text="{Binding SubstitutionValue, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource BaseTextBoxStyle}"
                                                     FontSize="{StaticResource StandardFontSize}"/>
                                            <TextBlock Text="{extensions:Localize Text_SubstitutionPlaceholder}"
                                                       Foreground="{DynamicResource TextMutedBrush}"
                                                       Margin="{StaticResource SmallMarginThickness}"
                                                       IsHitTestVisible="False"
                                                       VerticalAlignment="Center"
                                                       Padding="{StaticResource TextBoxPaddingThickness}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SubstitutionValue}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>

                                        <!-- Column 2: Action buttons -->
                                        <StackPanel Grid.Column="2"
                                                    Orientation="Horizontal">
                                            <Button x:Name="AddPropertyButton"
                                                    ToolTip="{extensions:Localize Button_Add}"
                                                    Margin="{StaticResource TinyMarginThickness}"
                                                    Click="AddPropertyButton_Click"
                                                    Tag="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource AddIconButton}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <Button x:Name="RemovePropertyButton"
                                                    ToolTip="{extensions:Localize Button_Remove}"
                                                    Margin="{StaticResource TinyMarginThickness}"
                                                    Click="RemovePropertyButton_Click"
                                                    Tag="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource CloseIconButton}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource SelectionBackgroundBrush}"/>
                                                    <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>

            <!-- User-defined properties tab -->
            <TabItem Header="{extensions:Localize Text_UserProperties}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Add new property panel -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource BackgroundQuaternaryBrush}"
                            BorderBrush="{DynamicResource BorderLightBrush}"
                            BorderThickness="{StaticResource StandardBorderThicknessValue}"
                            Margin="{StaticResource BottomSmallMarginThickness}"
                            Padding="{StaticResource StandardPaddingThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{extensions:Localize Text_NewProperty}"
                                       VerticalAlignment="Center"
                                       FontSize="{StaticResource StandardFontSize}"
                                       Margin="{StaticResource RightStandardMarginThickness}"/>

                            <TextBox x:Name="UserDefinedPropertyTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource BaseTextBoxStyle}"
                                     TextChanged="UserDefinedPropertyTextBox_TextChanged"
                                     KeyDown="UserDefinedPropertyTextBox_KeyDown"/>

                            <Button x:Name="AddUserDefinedPropertyButton"
                                    Grid.Column="2"
                                    Content="{extensions:Localize Button_Add}"
                                    MinWidth="{StaticResource StandardButtonMinWidth}"
                                    Margin="{StaticResource LeftSmallMarginThickness}"
                                    Style="{StaticResource InteractiveActionButtonStyle}"
                                    IsEnabled="False"
                                    Click="AddUserDefinedPropertyButton_Click"/>
                        </Grid>
                    </Border>

                    <!-- User-defined properties list -->
                    <ListBox x:Name="UserPropertiesListBox"
                             Grid.Row="1"
                             ItemsSource="{Binding Source={StaticResource UserPropertiesSource}}"
                             ItemContainerStyle="{StaticResource CustomListBoxItemStyle}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             BorderBrush="{DynamicResource BorderLightBrush}"
                             Background="{DynamicResource BackgroundPrimaryBrush}"
                             BorderThickness="{StaticResource StandardBorderThicknessValue}"
                             MouseDoubleClick="UserPropertiesListBox_MouseDoubleClick">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="ItemBorder"
                                        Background="{DynamicResource BackgroundPrimaryBrush}"
                                        BorderBrush="{DynamicResource BorderLightBrush}"
                                        BorderThickness="{StaticResource StandardBorderThicknessValue}"
                                        CornerRadius="{StaticResource SmallCornerRadiusValue}"
                                        Padding="{StaticResource SmallRectPaddingThickness}"
                                        Margin="{StaticResource TinyMarginThickness}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Column 0: Property name -->
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding ListDisplayName}"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource StandardFontSize}"
                                                   Margin="{StaticResource RightSmallPlusMarginThickness}"/>

                                        <!-- Column 1: Default value input (visible only when added) -->
                                        <Grid Grid.Column="1">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>

                                            <TextBox Text="{Binding SubstitutionValue, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource BaseTextBoxStyle}"
                                                     FontSize="{StaticResource StandardFontSize}"/>
                                            <TextBlock Text="{extensions:Localize Text_SubstitutionPlaceholder}"
                                                       Foreground="{DynamicResource TextMutedBrush}"
                                                       Margin="{StaticResource SmallMarginThickness}"
                                                       IsHitTestVisible="False"
                                                       VerticalAlignment="Center"
                                                       Padding="{StaticResource TextBoxPaddingThickness}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SubstitutionValue}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>

                                        <!-- Column 2: Action buttons -->
                                        <StackPanel Grid.Column="2"
                                                    Orientation="Horizontal">
                                            <Button ToolTip="{extensions:Localize Button_Add}"
                                                    Margin="{StaticResource TinyMarginThickness}"
                                                    Click="AddUserPropertyButton_Click"
                                                    Tag="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource AddIconButton}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <Button ToolTip="{extensions:Localize Button_Remove}"
                                                    Margin="{StaticResource TinyMarginThickness}"
                                                    Click="RemoveUserPropertyButton_Click"
                                                    Tag="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource CloseIconButton}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>

                                            <Button ToolTip="{extensions:Localize ToolTip_RemoveFromRegistry}"
                                                    Margin="{StaticResource TinyMarginThickness}"
                                                    Style="{StaticResource DeleteFromRegistryIconButton}"
                                                    Click="DeleteUserPropertyButton_Click"
                                                    Tag="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource SelectionBackgroundBrush}"/>
                                                    <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}" Value="True">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Information panel -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource BackgroundQuaternaryBrush}"
                            BorderBrush="{DynamicResource BorderLightBrush}"
                            BorderThickness="{StaticResource StandardBorderThicknessValue}"
                            Margin="{StaticResource TopSmallMarginThickness}"
                            Padding="{StaticResource StandardPaddingThickness}">
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   FontSize="{StaticResource StandardFontSize}">
                            <Run Text="ℹ"/>
                            <Run Text="{extensions:Localize Text_UserPropertiesInfo}"/>
                            <Run Text="{extensions:Localize Text_RegistryRemovalInfo}"/>
                        </TextBlock>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Bottom panel with buttons -->
        <Border Grid.Row="3"
                Style="{StaticResource DialogBottomBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Close button -->
                <Button Grid.Column="1"
                        Content="{extensions:Localize Button_Close}"
                        MinWidth="{StaticResource StandardButtonMinWidth}"
                        Style="{StaticResource InteractiveActionButtonStyle}"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
    </Border>
</Window>
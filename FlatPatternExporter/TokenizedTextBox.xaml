<UserControl x:Class="FlatPatternExporter.TokenizedTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" SnapsToDevicePixels="True">
    
    
    <Border Background="{StaticResource BackgroundPrimaryBrush}" 
            BorderBrush="{StaticResource BorderPrimaryBrush}" 
            BorderThickness="{StaticResource StandardBorderThicknessValue}" MinHeight="{StaticResource LargeElementHeight}"
            Padding="{StaticResource TinyMarginThickness}">
        <WrapPanel x:Name="TokenContainer" 
                   Orientation="Horizontal" 
                   VerticalAlignment="Center"
                   AllowDrop="True"
                   Drop="TokenContainer_Drop"
                   DragOver="TokenContainer_DragOver"/>
    </Border>
</UserControl>

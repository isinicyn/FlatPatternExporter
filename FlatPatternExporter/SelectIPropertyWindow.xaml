<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:local="clr-namespace:FlatPatternExporter"
    mc:Ignorable="av" x:Class="FlatPatternExporter.SelectIPropertyWindow"
    Title="Управление свойствами"
    ResizeMode="CanResize" 
    WindowStartupLocation="CenterScreen" 
    MinWidth="400"
    MinHeight="450" Width="560">
    
    <Window.Resources>
        <!-- CollectionViewSource для стандартных свойств с группировкой -->
        <CollectionViewSource x:Key="StandardPropertiesSource"
                              Source="{Binding StandardProperties}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Category" />
            </CollectionViewSource.GroupDescriptions>
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Category" Direction="Ascending" />
                <scm:SortDescription PropertyName="ListDisplayName" Direction="Ascending" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>

        <!-- CollectionViewSource для пользовательских свойств -->
        <CollectionViewSource x:Key="UserPropertiesSource"
                              Source="{Binding UserDefinedProperties}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="ListDisplayName" Direction="Ascending" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и общая информация -->
        <Border Grid.Row="0" 
                Background="{StaticResource BackgroundSecondaryBrush}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="{StaticResource StandardTopOnlyBorderThicknessValue}"
                Padding="{StaticResource StandardPaddingThickness}">
            <StackPanel>
                <TextBlock Text="Управление свойствами колонок" 
                           Style="{StaticResource SectionHeaderTextStyle}"
                           FontSize="{StaticResource LargeFontSize}"
                           Margin="0"/>
                <TextBlock Text="Дважды щелкните по свойству для добавления в таблицу или используйте кнопки действий"
                           Foreground="{StaticResource TextMutedBrush}"
                           Margin="{StaticResource TopSmallMarginThickness}" TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое с вкладками -->
        <TabControl Grid.Row="1" Margin="{StaticResource StandardMarginThickness}">
            <!-- Вкладка стандартных свойств -->
            <TabItem Header="Стандартные свойства">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель поиска и фильтров -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource BackgroundQuaternaryBrush}"
                            BorderBrush="{StaticResource BorderLightBrush}"
                            BorderThickness="{StaticResource StandardBorderThicknessValue}"
                            Margin="{StaticResource BottomSmallMarginThickness}"
                            Padding="{StaticResource StandardPaddingThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Grid Grid.Column="0">
                                <TextBox x:Name="StandardSearchBox" 
                                         Style="{StaticResource BaseTextBoxStyle}"
                                         TextChanged="StandardSearchBox_TextChanged"/>
                                <TextBlock Text="Поиск по названию..." 
                                           Foreground="{StaticResource TextMutedBrush}" 
                                           Margin="{StaticResource SmallMarginThickness}"
                                           IsHitTestVisible="False" VerticalAlignment="Center" 
                                           Padding="{StaticResource TextBoxPaddingThickness}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=StandardSearchBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            
                            <ComboBox x:Name="CategoryFilter" 
                                      Grid.Column="1"
                                      Width="150"
                                      Margin="{StaticResource LeftSmallMarginThickness}"
                                      Style="{StaticResource BaseComboBoxStyle}"
                                      SelectedIndex="0"
                                      SelectionChanged="CategoryFilter_SelectionChanged">
                                <ComboBoxItem>Все категории</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Список стандартных свойств -->
                    <ListBox x:Name="StandardPropertiesListBox"
                             Grid.Row="1"
                             ItemsSource="{Binding Source={StaticResource StandardPropertiesSource}}"
                             ItemContainerStyle="{StaticResource CustomListBoxItemStyle}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             BorderBrush="{StaticResource BorderLightBrush}"
                             Background="{StaticResource BackgroundPrimaryBrush}"
                             BorderThickness="{StaticResource StandardBorderThicknessValue}"
                             MouseDoubleClick="StandardPropertiesListBox_MouseDoubleClick">
                        
                        <!-- Группировка по категориям -->
                        <ListBox.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource BackgroundTertiaryBrush}"
                                                BorderBrush="{StaticResource BorderSecondaryBrush}"
                                                BorderThickness="{StaticResource StandardTopOnlyBorderThicknessValue}"
                                                Margin="{StaticResource TopSmallMarginThickness}"
                                                Padding="{StaticResource SmallRectPaddingThickness}">
                                            <TextBlock Text="{Binding Name}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextTertiaryBrush}"
                                                       FontSize="{StaticResource StandardFontSize}"/>
                                        </Border>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ListBox.GroupStyle>
                        
                        <!-- Шаблон элемента -->
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="ItemBorder"
                                        Background="{StaticResource BackgroundPrimaryBrush}"
                                        BorderBrush="{StaticResource BorderLightBrush}"
                                        BorderThickness="{StaticResource StandardBorderThicknessValue}"
                                        Padding="{StaticResource SmallRectPaddingThickness}"
                                        Margin="{StaticResource TinyMarginThickness}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding ListDisplayName}"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource StandardFontSize}"/>
                                        
                                        <!-- Кнопки действий -->
                                        <StackPanel Grid.Column="1" 
                                                    Orientation="Horizontal">
                                            <Button x:Name="AddPropertyButton"
                                                    ToolTip="Добавить колонку"
                                                    Margin="{StaticResource TinyMarginThickness}"
                                                    Click="AddPropertyButton_Click"
                                                    Tag="{Binding}">
                                                <Path Style="{StaticResource AddIconStyle}"/>
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource PositiveIconButtonStyle}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            
                                            <Button x:Name="RemovePropertyButton"
                                                    ToolTip="Удалить колонку"
                                                    Margin="{StaticResource TinyMarginThickness}"
                                                    Click="RemovePropertyButton_Click"
                                                    Tag="{Binding}">
                                                <Path Style="{StaticResource CloseIconStyle}"/>
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource DestructiveIconButtonStyle}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource SelectionBackgroundBrush}"/>
                                                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource BorderTertiaryBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>

            <!-- Вкладка пользовательских свойств -->
            <TabItem Header="Пользовательские свойства">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель добавления нового свойства -->
                    <Border Grid.Row="0"
                            Background="{StaticResource BackgroundQuaternaryBrush}"
                            BorderBrush="{StaticResource BorderLightBrush}"
                            BorderThickness="{StaticResource StandardBorderThicknessValue}"
                            Margin="{StaticResource BottomSmallMarginThickness}"
                            Padding="{StaticResource StandardPaddingThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Новое свойство:"
                                       VerticalAlignment="Center"
                                       FontSize="{StaticResource StandardFontSize}"
                                       Margin="{StaticResource RightStandardMarginThickness}"/>
                            
                            <TextBox x:Name="UserDefinedPropertyTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource BaseTextBoxStyle}"
                                     TextChanged="UserDefinedPropertyTextBox_TextChanged"
                                     KeyDown="UserDefinedPropertyTextBox_KeyDown"/>
                            
                            <Button x:Name="AddUserDefinedPropertyButton"
                                    Grid.Column="2"
                                    Content="Добавить"
                                    MinWidth="{StaticResource StandardButtonMinWidth}"
                                    Margin="{StaticResource LeftSmallMarginThickness}"
                                    Style="{StaticResource BaseButtonStyle}"
                                    IsEnabled="False"
                                    Click="AddUserDefinedPropertyButton_Click"/>
                        </Grid>
                    </Border>

                    <!-- Список пользовательских свойств -->
                    <ListBox x:Name="UserPropertiesListBox"
                             Grid.Row="1"
                             ItemsSource="{Binding Source={StaticResource UserPropertiesSource}}"
                             ItemContainerStyle="{StaticResource CustomListBoxItemStyle}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             BorderBrush="{StaticResource BorderLightBrush}"
                             Background="{StaticResource BackgroundPrimaryBrush}"
                             BorderThickness="{StaticResource StandardBorderThicknessValue}"
                             MouseDoubleClick="UserPropertiesListBox_MouseDoubleClick">
                        
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="ItemBorder"
                                        Background="{StaticResource BackgroundPrimaryBrush}"
                                        BorderBrush="{StaticResource BorderLightBrush}"
                                        BorderThickness="{StaticResource StandardBorderThicknessValue}"
                                        Padding="{StaticResource SmallRectPaddingThickness}"
                                        Margin="{StaticResource TinyMarginThickness}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding ListDisplayName}"
                                                   VerticalAlignment="Center"
                                                   FontSize="{StaticResource StandardFontSize}"/>
                                        
                                        <!-- Кнопки действий -->
                                        <StackPanel Grid.Column="1" 
                                                    Orientation="Horizontal">
                                            <Button ToolTip="Добавить колонку"
                                                    Margin="{StaticResource TinyMarginThickness}"
                                                    Click="AddUserPropertyButton_Click"
                                                    Tag="{Binding}">
                                                <Path Style="{StaticResource AddIconStyle}"/>
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource PositiveIconButtonStyle}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            
                                            <Button ToolTip="Удалить колонку"
                                                    Margin="{StaticResource TinyMarginThickness}"
                                                    Click="RemoveUserPropertyButton_Click"
                                                    Tag="{Binding}">
                                                <Path Style="{StaticResource CloseIconStyle}"/>
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource DestructiveIconButtonStyle}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            
                                            <Button ToolTip="Удалить из реестра"
                                                    Margin="{StaticResource TinyMarginThickness}"
                                                    Style="{StaticResource DestructiveIconButtonStyle}"
                                                    Click="DeleteUserPropertyButton_Click"
                                                    Tag="{Binding}">
                                                <Path Style="{StaticResource DeleteFromRegistryIconStyle}"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource SelectionBackgroundBrush}"/>
                                                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderBrush" Value="{StaticResource BorderTertiaryBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Информационная панель -->
                    <Border Grid.Row="2"
                            Background="{StaticResource BackgroundQuaternaryBrush}"
                            BorderBrush="{StaticResource BorderLightBrush}"
                            BorderThickness="{StaticResource StandardBorderThicknessValue}"
                            Margin="{StaticResource TopSmallMarginThickness}"
                            Padding="{StaticResource StandardPaddingThickness}">
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="{StaticResource StandardFontSize}">
                            <Run Text="ℹ"/>
                            <Run Text="Пользовательские свойства читаются из Inventor User Defined Properties."/>
                            <Run Text="Удаление из реестра полностью удаляет свойство из системы."/>
                        </TextBlock>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Нижняя панель с кнопками -->
        <Border Grid.Row="2" 
                Style="{StaticResource DialogBottomBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Кнопка закрытия -->
                <Button Grid.Column="1"
                        Content="Закрыть"
                        MinWidth="{StaticResource StandardButtonMinWidth}"
                        Style="{StaticResource BaseButtonStyle}"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
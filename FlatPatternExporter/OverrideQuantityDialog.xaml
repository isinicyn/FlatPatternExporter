<Window x:Class="FlatPatternExporter.OverrideQuantityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Переопределить количество" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight"
        MinWidth="300">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основное содержимое -->
        <StackPanel Grid.Row="0" Margin="{StaticResource StandardPaddingThickness}">
            <GroupBox Header="Переопределение количества" Margin="{StaticResource BottomLargeMarginThickness}">
                <StackPanel Margin="{StaticResource SectionContentMarginThickness}">
                    <StackPanel Orientation="Horizontal" Margin="{StaticResource BottomSmallMarginThickness}">
                        <TextBlock Text="Введите новое количество:" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center"
                                   Width="180"/>
                        <TextBox x:Name="quantityTextBox" 
                                 PreviewTextInput="QuantityTextBox_PreviewTextInput"
                                 Style="{StaticResource FileNameInputTextBoxStyle}"
                                 Width="50"
                                 FlowDirection="RightToLeft"
                                 ToolTip="Введите количество (только числа)"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Кнопки -->
        <Border Grid.Row="1" Style="{StaticResource DialogBottomBarStyle}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" 
                        Margin="{StaticResource RightSmallMarginThickness}"
                        Style="{StaticResource FileNameActionButtonStyle}"
                        Click="CancelButton_Click"/>
                <Button Content="ОК" 
                        Style="{StaticResource FileNameActionButtonStyle}"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

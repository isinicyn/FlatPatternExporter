<Window x:Class="FlatPatternExporter.OverrideQuantityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Переопределить количество" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        Background="White"
        FontFamily="Segoe UI" 
        SizeToContent="WidthAndHeight"
        MinWidth="300">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основное содержимое -->
        <StackPanel Grid.Row="0" Margin="15">
            <GroupBox Header="Переопределение количества" Margin="0,0,0,15">
                <StackPanel Margin="10,10,10,5">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Введите новое количество:" 
                                   FontSize="11" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center"
                                   Width="180"/>
                        <TextBox x:Name="quantityTextBox" 
                                 PreviewTextInput="QuantityTextBox_PreviewTextInput"
                                 Style="{StaticResource FileNameInputTextBoxStyle}"
                                 Width="50"
                                 FlowDirection="RightToLeft"
                                 ToolTip="Введите количество (только числа)"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Кнопки -->
        <Border Grid.Row="1" Background="#F8F8F8" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" 
                        Width="120" 
                        Margin="0,0,5,0"
                        Style="{StaticResource FileNameActionButtonStyle}"
                        Click="CancelButton_Click"/>
                <Button Content="ОК" 
                        Width="120" 
                        Style="{StaticResource FileNameActionButtonStyle}"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
<Window x:Class="FlatPatternExporter.OverrideQuantityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Переопределить количество" Width="320" Height="200" MinWidth="320" MinHeight="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#FAFAFA">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <TextBlock Text="Переопределение количества" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" Height="21" Width="237"/>

        <!-- Ввод нового количества -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Height="30" Margin="0,0,10,0" HorizontalAlignment="Right">
            <TextBlock Text="Введите новое количество:" FontWeight="Bold" Width="190" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="quantityTextBox" PreviewTextInput="QuantityTextBox_PreviewTextInput" Margin="0,0,0,0" Padding="5" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1" Width="70" FlowDirection="RightToLeft"/>
        </StackPanel>

        <!-- Кнопки "ОК" и "Cancel" -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Width="160" Height="30" VerticalAlignment="Center" Margin="0,0,10,0">
            <Button Content="Cancel" Width="75" Margin="0,0,10,0" Click="CancelButton_Click" Background="#E0E0E0" BorderBrush="#CCCCCC" Padding="5"/>
            <Button Content="OK" Width="75" Click="OkButton_Click" Background="#4CAF50" Foreground="White" BorderBrush="#388E3C" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="FlatPatternExporter.ConflictDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FlatPatternExporter"
        Title="Детали конфликта обозначений" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#FAFAFA" SizeToContent="WidthAndHeight">
    <Grid Margin="10,10,10,10" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <TextBlock Text="Конфликтующие обозначения и файлы:" FontWeight="Bold" FontSize="16" Grid.Row="0" Margin="0,0,0,20"/>

        <!-- Иерархическое отображение конфликтов (TreeView) -->
        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,0,10">
            <TreeView x:Name="ConflictTreeView" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1" Padding="0,10,10,10"
                      ItemsSource="{Binding ConflictGroups}">
                <TreeView.Resources>
                    <ContextMenu x:Key="FileContextMenu">
                        <MenuItem Header="Открыть файл" Click="OpenFileMenuItem_Click"/>
                    </ContextMenu>
                    
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="True"/>
                        <Setter Property="ContextMenu" Value="{StaticResource FileContextMenu}"/>
                    </Style>
                </TreeView.Resources>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Files}">
                        <TextBlock Text="{Binding PartNumber}" FontWeight="Bold"/>
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayText}"/>
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </StackPanel>
        <!-- Кнопки "ОК" и "Отмена" -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="ОК" Width="100" Click="OkButton_Click" Background="#4CAF50" Foreground="White" BorderBrush="#388E3C" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>

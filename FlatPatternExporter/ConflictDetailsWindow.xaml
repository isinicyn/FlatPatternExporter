<Window x:Class="FlatPatternExporter.ConflictDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FlatPatternExporter"
        Title="Детали конфликта обозначений" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        Background="White"
        FontFamily="Segoe UI" 
        SizeToContent="WidthAndHeight"
        MinWidth="600">

    <Window.Resources>
        <ResourceDictionary>
            <!-- Подключение внешнего файла стилей -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/GeneralStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основное содержимое -->
        <StackPanel Grid.Row="0" Margin="15">
            <GroupBox Header="Конфликтующие обозначения и файлы" Margin="0,0,0,15">
                <StackPanel Margin="10,10,10,5">
                    <!-- TreeView для отображения конфликтов -->
                    <TreeView x:Name="ConflictTreeView" 
                              Style="{StaticResource ConflictTreeViewStyle}"
                              MinHeight="200"
                              MaxHeight="400"
                              ItemsSource="{Binding ConflictGroups}">
                        <TreeView.Resources>
                            <ContextMenu x:Key="FileContextMenu">
                                <MenuItem Header="Открыть файл" Click="OpenFileMenuItem_Click"/>
                            </ContextMenu>
                            
                            <Style TargetType="TreeViewItem" BasedOn="{StaticResource ConflictTreeViewItemStyle}">
                                <Setter Property="ContextMenu" Value="{StaticResource FileContextMenu}"/>
                            </Style>
                        </TreeView.Resources>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Files}">
                                <TextBlock FontWeight="Bold" FontSize="11">
                                    <Run Text="Обозначение: "/>
                                    <Run Text="{Binding PartNumber}"/>
                                </TextBlock>
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock FontSize="11">
                                            <Run Text="Файл: "/>
                                            <Run Text="{Binding FileName}"/>
                                            <Run Text=" | Состояние: "/>
                                            <Run Text="{Binding ModelState}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Кнопки -->
        <Border Grid.Row="1" Background="#F8F8F8" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ОК" 
                        Width="120" 
                        Style="{StaticResource FileNameActionButtonStyle}"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
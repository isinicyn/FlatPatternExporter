<Window x:Class="FlatPatternExporter.ConflictDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FlatPatternExporter"
        Title="Детали конфликта обозначений" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight"
        MinWidth="600">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Основное содержимое -->
        <StackPanel Grid.Row="0" Margin="{StaticResource StandardPaddingThickness}">
            <GroupBox Header="Конфликтующие обозначения и файлы" Margin="{StaticResource BottomLargeMarginThickness}">
                <StackPanel Margin="{StaticResource SectionContentMarginThickness}">
                    <!-- TreeView для отображения конфликтов -->
                    <TreeView x:Name="ConflictTreeView" 
                              Style="{StaticResource ConflictTreeViewStyle}"
                              MinHeight="200"
                              MaxHeight="400"
                              ItemsSource="{Binding ConflictGroups}">
                        <TreeView.Resources>
                            <ContextMenu x:Key="FileContextMenu">
                                <MenuItem Header="Открыть файл" Click="OpenFileMenuItem_Click"/>
                            </ContextMenu>
                            
                            <Style TargetType="TreeViewItem" BasedOn="{StaticResource ConflictTreeViewItemStyle}">
                                <Setter Property="ContextMenu" Value="{StaticResource FileContextMenu}"/>
                            </Style>
                        </TreeView.Resources>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Files}">
                                <TextBlock FontWeight="Bold">
                                    <Run Text="Обозначение: "/>
                                    <Run Text="{Binding PartNumber}"/>
                                </TextBlock>
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="Файл: "/>
                                            <Run Text="{Binding FileName}"/>
                                            <Run Text=" | Состояние: "/>
                                            <Run Text="{Binding ModelState}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Кнопки -->
        <Border Grid.Row="1" Style="{StaticResource DialogBottomBarStyle}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ОК" 
                        Style="{StaticResource FileNameActionButtonStyle}"
                        Click="OkButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>FPExport.ico</ApplicationIcon>	
  <AssemblyVersion>1.0.0.0</AssemblyVersion>
  </PropertyGroup>

  <Target Name="SetVersionInfo" BeforeTargets="GetAssemblyVersion">
    <Exec Command="git rev-list --count HEAD" ConsoleToMSBuild="true">
      <Output TaskParameter="ConsoleOutput" PropertyName="RevisionNumber" />
    </Exec>
    <Exec Command="git rev-parse --short HEAD" ConsoleToMSBuild="true">
      <Output TaskParameter="ConsoleOutput" PropertyName="CommitHash" />
    </Exec>
    <PropertyGroup>
      <AssemblyFileVersion>1.0.0.$(RevisionNumber)</AssemblyFileVersion>
      <FileVersion>$(AssemblyFileVersion)</FileVersion>
      <InformationalVersion>$(AssemblyFileVersion)+$(CommitHash)</InformationalVersion>
    </PropertyGroup>
    <Message Text="Assembly File Version: $(AssemblyFileVersion)" Importance="high" />
    <Message Text="Informational Version: $(InformationalVersion)" Importance="high" />
  </Target>

  <ItemGroup>
    <COMReference Include="InventorApprentice">
      <WrapperTool>tlbimp</WrapperTool>
      <VersionMinor>0</VersionMinor>
      <VersionMajor>1</VersionMajor>
      <Guid>780fb82c-a4aa-4043-a0b6-abca50db747a</Guid>
      <Lcid>0</Lcid>
      <Isolated>false</Isolated>
      <EmbedInteropTypes>true</EmbedInteropTypes>
    </COMReference>
  </ItemGroup>

  <ItemGroup>
    <Content Include="FPExport.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="netDxf.netstandard" Version="3.0.1" />
    <PackageReference Include="stdole" Version="17.10.40170" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.7" />
    <PackageReference Include="System.Windows.Extensions" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\LayerSettings\LayerSettings\LayerSettings.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Autodesk.Inventor.Interop">
      <HintPath>C:\Program Files\Autodesk\Inventor 2025\Bin\Autodesk.Inventor.Interop.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>